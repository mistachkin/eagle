      "{(?:test_log_id )?} " "(?:test_log_id )?" \
      "{(?:test_log_path )?} " "(?:test_log_path )?" \
      "{(?:test_log_queue )?} " "(?:test_log_queue )?" \
      "{(?:test_log_sentry )?} " "(?:test_log_sentry )?" \
